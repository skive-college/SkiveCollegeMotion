@page
@model SkiveCollegeMotion.Pages.Tilmeld.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Tilmeld aktivitet</h2>

<div class="form-group">
    <form method="post">
        <fieldset>
            <legend></legend>

                @Html.LabelFor(model => model.Aktivitet, htmlAttributes: new { @class = "control-label col-md-2" })
                <br />
                <div>
                    <br />
                    @foreach (var item in Model.Aktivitet) {
                    @Html.RadioButtonFor(model => model.Aktivitet, item.ID) @Html.Label("   " + item.Navn); <br />
                }
                </div>
                <br />
                <input type="button" name="button" class="button1" value="Submit" />
        </fieldset>
    </form>
</div>
