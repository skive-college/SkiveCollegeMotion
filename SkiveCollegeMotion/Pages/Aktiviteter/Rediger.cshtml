@page
@model SkiveCollegeMotion.Pages.Aktiviteter.RedigerModel

@{
    ViewData["Title"] = "Rediger";
}

<h2>Rediger</h2>

<h4>Aktivitet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Aktivitet.ID" />
            <div class="form-group">
                <label asp-for="Aktivitet.Navn" class="control-label"></label>
                <input asp-for="Aktivitet.Navn" class="form-control" />
                <span asp-validation-for="Aktivitet.Navn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aktivitet.Sted" class="control-label"></label>
                <input asp-for="Aktivitet.Sted" class="form-control" />
                <span asp-validation-for="Aktivitet.Sted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aktivitet.Antal" class="control-label"></label>
                <input asp-for="Aktivitet.Antal" class="form-control" />
                <span asp-validation-for="Aktivitet.Antal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aktivitet.Ansvarlig" class="control-label"></label>
                <input asp-for="Aktivitet.Ansvarlig" class="form-control" />
                <span asp-validation-for="Aktivitet.Ansvarlig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Tilbage til liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
